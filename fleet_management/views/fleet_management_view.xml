<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_fleet_management_tree" model="ir.ui.view">
        <field name="name">fleet.management.tree</field>
        <field name="model">fleet.management</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="vehicle_model"/>
                <field name="license_plate"/>
                <field name="driver_name"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="view_fleet_management_form" model="ir.ui.view">
        <field name="name">fleet.management.form</field>
        <field name="model">fleet.management</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="license_plate"/>
                            <field name="vehicle_model"/>
                            <field name="vehicle_type"/>
                            <field name="driver_name"/>
                        </group>
                        <group>
                            <field name="odometer"/>
                            <field name="status"/>
                            <field name="total_fuel_cost" readonly="1"/>
                            <field name="total_maintenance_cost" readonly="1"/>
                            <field name="total_expense" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Fuel Logs">
                            <field name="fuel_log_ids">
                                <tree editable="bottom">
                                    <field name="date"/>
                                    <field name="fuel_type"/>
                                    <field name="liters"/>
                                    <field name="fuel_cost"/>
                                    <field name="odometer"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Maintenance Records">
                            <field name="maintenance_ids">
                                <tree editable="bottom">
                                    <field name="maintenance_type"/>
                                    <field name="date"/>
                                    <field name="next_due_date"/>
                                    <field name="maintenance_cost"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>           
            </form>
        </field>
    </record>

    <record id="view_fleet_management_dashboard_kanban" model="ir.ui.view">
        <field name="name">fleet.management.dashboard.kanban</field>
        <field name="model">fleet.management</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard">
                <field name="maintenance_due"/>
                <templates>
                    <t t-name="kanban-box">
                    <div t-att-class="{'oe_kanban_card': true,'bg-danger': record.maintenance_due.raw_value}">
                            <strong><field name="name"/></strong>
                            <field name="status" widget="badge" options="{'color_field': 'status'}"/>
                            <div>Status: <field name="status"/></div>
                            <div>Total Fuel Cost: <field name="total_fuel_cost"/></div>
                            <div>Total Maintenance Cost: <field name="total_maintenance_cost"/></div>
                            <div>Total Expense: <field name="total_expense"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_fleet_management" model="ir.actions.act_window">
        <field name="name">Fleet Management</field>
        <field name="res_model">fleet.management</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <record id="action_fleet_dashboard" model="ir.actions.act_window">
        <field name="name">Fleet Dashboard</field>
        <field name="res_model">fleet.management</field>
        <field name="view_mode">kanban</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Welcome to Fleet Dashboard</p>
        </field>
    </record>

    <menuitem id="menu_fleet_management_root" name="Fleet Management"/>
    <menuitem id="menu_fleet_management" name="Vehicles" parent="menu_fleet_management_root" action="action_fleet_management"/>
    <menuitem id="menu_fleet_dashboard" name="Dashboard" parent="menu_fleet_management_root" action="action_fleet_dashboard"/>

</odoo>