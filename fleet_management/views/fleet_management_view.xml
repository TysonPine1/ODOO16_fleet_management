<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_fleet_management_tree" model="ir.ui.view">
        <field name="name">fleet.management.tree</field>
        <field name="model">fleet.management</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="vehicle_model"/>
                <field name="license_plate"/>
                <field name="driver_name"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="view_fleet_management_form" model="ir.ui.view">
        <field name="name">fleet.management.form</field>
        <field name="model">fleet.management</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="license_plate"/>
                            <field name="vehicle_model"/>
                            <field name="vehicle_type"/>
                        </group>
                        <group>
                            <field name="driver_name"/>
                            <field name="odometer"/>
                            <field name="status"/>
                            <field name="total_fuel_cost" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Fuel Logs">
                            <field name="fuel_log_ids">
                                <tree editable="bottom">
                                    <field name="date"/>
                                    <field name="fuel_type"/>
                                    <field name="liters"/>
                                    <field name="cost"/>
                                    <field name="odometer"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>           
            </form>
        </field>
    </record>

    <record id="action_fleet_management" model="ir.actions.act_window">
        <field name="name">Fleet Management</field>
        <field name="res_model">fleet.management</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_fleet_management_root" name="Fleet Management"/>
    <menuitem id="menu_fleet_management" name="Vehicles" parent="menu_fleet_management_root" action="action_fleet_management"/>
</odoo>